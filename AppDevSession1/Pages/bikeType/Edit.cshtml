@page
@model AppDevSession1.Pages.bikeType.EditModel
@{
}


<form method="post">
    <input hidden asp-for="@Model.BikeType.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Bike</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Type" class="form-control">Type</label>
            <input asp-for="@Model.BikeType.Type" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.Type" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Brand" class="form-control">Brand</label>
            <input asp-for="@Model.BikeType.Brand" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.Brand" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.ModelName" class="form-control">Model Name</label>
            <input asp-for="@Model.BikeType.ModelName" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.ModelName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Size" class="form-control">Size</label>
            <input asp-for="@Model.BikeType.Size" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.Size" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Price" class="form-control">Price</label>
            <input asp-for="@Model.BikeType.Price" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 120px">Back to List</a>
    </div>
</form>

            
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}