@page
@model AppDevSession1.Pages.bikeType.IndexModel
@{
   
}
<partial name="_Notifications" />
<div class="container p-3">
    <div class="col-6">
        Bike List
    </div>
    <div class="col-6 text-end">
        <a asp-page="create" class="btn btn-primary" style="width: 180px">
            <i class="bi bi-plus-circle">  Add a New Bike</i>
        </a>
        
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>ID</th>
        <th>Type</th>
        <th>Size</th>
        <th>Brand</th>
        <th>Model</th>
        <th>Price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.bikeTypes)
        {
            <tr>
                <td width="15%">@obj.Id</td>
                <td width="15%">@obj.Type</td>
                <td width="20%">@obj.Brand</td>
                <td width="20%">@obj.ModelName</td>
                <td width="15%">@obj.Size</td>
                <td width="15%">@obj.Price$</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i></a>
                        <a asp-page="Delete" class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>