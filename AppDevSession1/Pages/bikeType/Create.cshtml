@page
@model AppDevSession1.Pages.bikeType.CreateModel
@{
    // here I will use my toaster to show something has been created !!
    // needs an if statement to verify if the operation was successful
    @if (TempData["success"] != null)
    {
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script type="taxt/javascript">toastr.success('Bingo', 'JAC'</script>
    }
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Bike</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Type" class="form-control">Type</label>
            <input asp-for="@Model.BikeType.Type" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.Type"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Brand" class="form-control">Brand</label>
            <input asp-for="@Model.BikeType.Brand" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.Brand"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.ModelName" class="form-control">Model Name</label>
            <input asp-for="@Model.BikeType.ModelName" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.ModelName"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Size" class="form-control">Size</label>
            <input asp-for="@Model.BikeType.Size" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.Size"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BikeType.Price" class="form-control">Price</label>
            <input asp-for="@Model.BikeType.Price" class="form-control"/>
            <span asp-validation-for="@Model.BikeType.Price"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 120px">Back to List</a>
    </div>
</form>

            
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}